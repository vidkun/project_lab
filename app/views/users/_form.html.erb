<%= form_for @user, html: { role: 'form' } do |f| %>
  <!-- Check if there were any errors saving user and display them if so -->
  <% if @user.errors.any? %>
  <div id='error_explanation'>
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited
        this user from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    <% end %>
  </div>
  <!-- Begin rendering the form -->
  <div class= 'form-group'>
    <%= f.label :name, 'User Name:' %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class= 'form-group'>
    <%= f.label :email, 'User Email:' %><br>
    <%= f.text_field :email, class: 'form-control' %>
  </div>
  <div class= 'form-group'>
    <%= f.label :phone, 'Phone Number:' %><br>
    <%= f.text_field :phone %>
  </div>
  <p>
    <%= link_to 'Back', users_path, class: 'btn btn-default' %>
    <%= f.submit 'Submit', class: 'btn btn-primary' %> 
  </p>
<% end %>