<h1>Users</h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>User Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= number_to_phone(user.phone, area_code: true) %></td>
        <td><%= link_to 'Show', user, class: 'btn btn-xs btn-default' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-xs btn-default' %></td>
        <td><%= link_to 'Destroy', user, class: 'btn btn-xs btn-default', method: :delete, 
                                            data: { 
                                              confirm: 'Are you sure you want to delete this user?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<p><%= link_to 'Add New User', new_user_path, class: 'btn btn-primary' %></p>