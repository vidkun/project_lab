<h1><%= @project.name %></h1>

<h3>Description:</h3>
<p><%= @project.description %></p>

<h3>Due Date:</h3>
<p><%= @project.due_date_at.localtime %></p>

<h3>Project Tasks:</h3>
  <% @tasks.each do |task| %>
  <p>
    <strong class="task_name"><%= task.name %></strong>
  <br>
    <%= simple_format(task.description, {class: 'task_description'}, sanitize: true) %>
  <br>
    Delivery Minutes: <%= task.delivery_minutes %>  |  
    Status: <%= task.is_completed ? 'Complete' : 'Incomplete' %>
  <br>
    <%= link_to 'Edit Task', edit_project_task_path(@project, task) %> |
  </p>
<% end %>


<%= link_to 'Home', root_path %> | 
<%= link_to 'Edit', edit_project_path %> | 
<%= link_to 'Delete', @project, method: :delete, 
                                data: {
                                  confirm: 'Are you sure you want to delete this project?'} %> | 
<%= link_to 'Add New Task', new_project_task_path(@project) %>
